<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:id="@+id/toolbar"
        android:background="#03A9F4"

        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:src="@drawable/logo"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
            <ImageButton
                android:id="@+id/open_draw"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:background="@drawable/reoder"
                android:layout_centerInParent="true"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_centerInParent="true"
                android:layout_alignParentRight="true"
                android:layout_height="wrap_content">
               <ImageButton
                   android:layout_margin="5dp"
                   android:background="@drawable/home"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   />
              <de.hdodenhof.circleimageview.CircleImageView
                  android:layout_width="30dp"
                  android:layout_height="30dp"
                  android:layout_margin="5dp"
                  android:src="@drawable/user"/>
            </LinearLayout>
        </RelativeLayout>
    </androidx.appcompat.widget.Toolbar>
    <androidx.drawerlayout.widget.DrawerLayout
        android:layout_width="match_parent"
        android:id="@+id/draw_layout"
        android:layout_height="match_parent">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/main_frame"/>
        <LinearLayout
            android:background="#333333"
            android:layout_width="match_parent"
            android:layout_gravity="start"
            android:layout_height="match_parent"
            android:orientation="vertical">
        <LinearLayout
            android:background="#333333"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="120dp">
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                app:cardCornerRadius="10dp"
                app:cardBackgroundColor="#F6F0F0"
                android:layout_height="90dp"
                android:layout_margin="20dp"
                android:id="@+id/left_click_btcv"
                android:layout_gravity="center"
                android:layout_weight="1">
                <ImageView
                    android:layout_width="50dp"
                    android:layout_gravity="center|top"
                    android:src="@drawable/home_black"
                    android:layout_height="50dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="首页"
                    android:textSize="20dp"
                    android:layout_margin="10dp"
                    android:layout_gravity="center|bottom"
                    android:textColor="#000"/>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                app:cardCornerRadius="10dp"
                android:id="@+id/right_click_btcv"
                android:layout_height="90dp"
                app:cardBackgroundColor="#F6F0F0"
                android:layout_margin="20dp"
                android:layout_weight="1">
                <ImageView
                    android:layout_width="50dp"
                    android:layout_gravity="center|top"
                    android:src="@drawable/lable_black"
                    android:layout_height="70dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="广告管理"
                    android:textSize="20dp"
                    android:layout_margin="10dp"
                    android:layout_gravity="center|bottom"
                    android:textColor="#000"/>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
        <FrameLayout
            android:layout_width="match_parent"
            android:id="@+id/draw_item"
            android:layout_height="match_parent"/>
        </LinearLayout>
    </androidx.drawerlayout.widget.DrawerLayout>
</LinearLayout>